; prefix key
(set-prefix-key (kbd "C-t"))

;; keybind for application
(define-key *root-map* (kbd "s-Return") "exec urxvt")
(define-key *root-map* (kbd "Print") "exec flameshot gui")
(define-key *root-map* (kbd "C-s-Return") "exec rofi -show run")

;; sound keybinding
(define-key *top-map* (kbd "XF86AudioRaiseVolume") "exec pactl set-sink-volume @DEFAULT_SINK@ +5%")
(define-key *top-map* (kbd "XF86AudioLowerVolume") "exec pactl set-sink-volume @DEFAULT_SINK@ -5%")
(define-key *top-map* (kbd "XF86AudioMute") "exec pactl set-sink-mute @DEFAULT_SINK@ toggle")

; window 
(define-key *root-map* (kbd "s-1") "select-window 1")
(define-key *root-map* (kbd "s-2") "select-window 2")
(define-key *root-map* (kbd "s-3") "select-window 3")
(define-key *root-map* (kbd "s-4") "select-window 4")
(define-key *root-map* (kbd "s-5") "select-window 5")
